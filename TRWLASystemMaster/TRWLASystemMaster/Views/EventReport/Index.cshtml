@{
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<hr>

<h1>Event Popularity Report</h1>


<center>
    <button class="btn">Generate Report</button>
    <hr>

    <div id="chart_div" style="width:900px; height:400px"></div>
</center>


<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Year', 'Functions', 'Lectures'],
          ['Jan',  50,      45],
          ['Feb',  75,      12],
          ['March',  89,       78],
          ['April',  100,      98]
        ]);

        var options = {
          title: 'Average Monthly attendance for events between January - April of 2017',
          hAxis: {title: 'Month',  titleTextStyle: {color: '#333'}},
          vAxis: {minValue: 0,title:"Average Attendance"}
        };

        var chart = new google.visualization.AreaChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }
</script> 