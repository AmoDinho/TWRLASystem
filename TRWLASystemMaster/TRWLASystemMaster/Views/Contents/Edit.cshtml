@model TRWLASystemMaster.Models.Content

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h2>Update @Html.DisplayFor(model => model.Content_Name)</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ContentID)

        <div class="form-group">
            @Html.Label("Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Content_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Content Link", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content_Link, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Content_Link, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Content Status", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Locked: @Html.RadioButtonFor(model => model.Content_Status, 1)
                <br />
                <br />
                Unlocked: @Html.RadioButtonFor(model => model.Content_Status, 0)
                @Html.ValidationMessageFor(model => model.Content_Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Content Description", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content_Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Content_Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-inline" style="float:right; margin-bottom:10px; margin-top:10px;">
            <div class="form-group" style=" margin-right:10px;">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-default btn-round" data-toggle="modal" data-target="#Create" style="color:#9b16d8">
                        Update
                    </button>
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 ">
                    <div>
                        @Html.ActionLink("Return", "Index", "Contents1", new { @class = "btn btn-default btn-round", @style = "color:#9b16d8" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}
