@model TRWLASystemMaster.Models.DB.Content

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h2>Update @Html.DisplayFor(model => model.Content_Name)</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ContentID)

        <div class="form-group">
            @Html.Label("Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Content_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Content Link", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content_Link, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Content_Link, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Content Status", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Locked: @Html.RadioButtonFor(model => model.Content_Status, 1)
                <br />
                <br />
                Unlocked: @Html.RadioButtonFor(model => model.Content_Status, 0)
                @Html.ValidationMessageFor(model => model.Content_Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Content Description", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content_Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Content_Description, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <div class="modal fade" id="Create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Update Content</h4>
                </div>
                <div class="modal-body">
                    Are you sure that you want to update this Content?
                </div>
                <div class="modal-footer form-inline">
                    <div class="form-actions no-color ">
                        <button type="submit" value="Create" class="btn">Confirm</button>
                    </div>
                    <button type="button" class="btn" data-dismiss="modal">Edit</button>
                </div>
            </div>
        </div>
    </div>
}
<div class="form-inline" style="float:right; margin-bottom:10px; margin-top:10px;">
    <div class="form-group">
        <div style="margin-right:5px;">
            <button class="btn btn-default" data-toggle="modal" data-target="#Create">
                Update Event
            </button>
        </div>
    </div>
    <div class="form-group">
        <button type="button" class="btn" onclick="location.href='@Url.Action("Index", "Contents")'">Return</button>
    </div>
</div>