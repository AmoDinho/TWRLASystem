<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Status
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(p => p.ContentID != 1))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content_Name)
            </td>
            <td>
                @if (item.Content_Status == 1)
                {
                    <p ><i data-toggle="tooltip" title="This content is locked. 
                       It cannot be seen by students." class="fa fa-lock" aria-hidden="true"></i></p>
                }
                @if (item.Content_Status == 0)
                {
                    <p ><i data-toggle="tooltip" title="This content is unlocked. 
                       It can be seen by students."  class="fa fa-unlock" aria-hidden="true"></i></p>
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content_Description)
            </td>
            <td>
                <a href="@Url.Action("Details", new { id=item.ContentID })" data-toggle="tooltip" title="Details"><i class="fa fa-info-circle" aria-hidden="true"></i></a>

            </td>
        </tr>
    }

</table>

<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group">
                <button data-toggle="tooltip" title="Return to the Main Menu" type="button" class="btn" onclick="location.href='@Url.Action("Index", "TRWLASchedules")'"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
    </div>
</div>

