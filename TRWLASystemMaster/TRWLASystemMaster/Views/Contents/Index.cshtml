@model IEnumerable<TRWLASystemMaster.Models.DB.Content>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h1>TRWLA Content</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>


<div class="form-inline">
    <div class="form-group" style="margin-right:10px;">
        <h2 style="z-index:100; position:relative; background-color:transparent;">Search Content</h2>
        @using (Html.BeginForm())
        {
            <div class="form-inline" style="margin-bottom:10px;">
                <p data-toggle="tooltip" title="Search by name" class="form-group">
                    @Html.TextBox("searchString", "", new { placeholder = "Name of Content", @class = "form-control", style = "width:100%;" })
                </p>

                <p class="form-group">
                    <button data-toggle="tooltip" title="Search" type="submit" value="Search" class="btn"><i class="fa fa-search" aria-hidden="true" style="color:black;"></i></button>
                </p>
                <div class="form-group">
                    <button data-toggle="tooltip" title="Upload new Content" type="button" class="btn" onclick="location.href='@Url.Action("Create", "Contents")'"><i class="fa fa-plus" aria-hidden="true"></i></button>
                </div>
            </div>
        }
        <div class="form-group">
            <select data-toggle="tooltip" title="Filter Content" id="UrlList" onchange="doNavigate()" class="form-control" style="margin-bottom:20px; width:280px;">
                <option value="">Filter by...</option>
                <option value="@Url.Action("Index", "Contents", new { all = ViewBag.SurnameSortParm })'">Show All</option>
                <option value="@Url.Action("Index", "Contents", new { sortOrder = ViewBag.NameSortParm })'">Name</option>
                <option value="@Url.Action("Index", "Contents", new { locked = ViewBag.SurnameSortParm })'">Locked</option>
                <option value="@Url.Action("Index", "Contents", new { unlocked = ViewBag.SurnameSortParm })'">Unlocked</option>
            </select>
        </div>
    </div>
</div>

<script>
    function doNavigate() {
        window.location.href = document.getElementById("UrlList").value;
    }
</script>


