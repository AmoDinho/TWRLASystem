@model IEnumerable<TRWLASystemMaster.Models.Usertype.VenueType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h2>Venue Type</h2>
    </div>

   

    @* Search Button for VenueType Description'*@
    @using (Html.BeginForm())
    {
        <p>
            Find by name: @Html.TextBox("SearchStringVT", null, new { @style = "border-radius:4px; width:300px; color:black; border-color:white" })
            <input type="submit" value="Search" />
        </p>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    
                    @Html.ActionLink("Details", "Details", new { id = item.VenueTypeID }) 
                   
                </td>
            </tr>
        }

    </table>

<div class="form-inline" style="float:right; margin-bottom:10px; margin-top:10px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div>
                @Html.ActionLink("Add a new Venue Type", "Create","VenueTypes", new { @class = "btn btn-default btn-round", @style = "color:#9b16d8" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div>
                @Html.ActionLink("Update", "Details", "VenueTypes", new { @class = "btn btn-default btn-round", @style = "color:#9b16d8"})
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div>
                @Html.ActionLink("Delete", "Delete", new { @class = "btn btn-default btn-round", @style = "color:#9b16d8" })
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div>
                @Html.ActionLink("Return", "Create", new { @class = "btn btn-default btn-round", @style = "color:#9b16d8" })
            </div>
        </div>
    </div>

    </div>
