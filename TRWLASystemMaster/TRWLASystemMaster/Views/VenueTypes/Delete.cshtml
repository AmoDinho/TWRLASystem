@model TRWLASystemMaster.Models.DB.VenueType

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h1>Delete @Html.DisplayFor(modelItem => modelItem.VenueType_Description) </h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>

<h3>Are you sure you want to delete this venue type?</h3>
<div>
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.VenueTypeID)

        <div class="form-group">
            <label class="control-label col-md-2"> Venue Type Name:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.VenueType_Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VenueType_Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-inline" style="float:right; margin-bottom:10px; margin-top:10px;">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 ">
                    <button class="btn btn-default" data-toggle="modal" data-target="#Create">
                        Delete
                    </button>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 ">
                    <button type="button" class="btn" onclick="location.href='@Url.Action("Index", "VenueTypes")'">Return</button>
                </div>
            </div>
        </div>
    </div>
</div>