@model TRWLASystemMaster.Models.DB.Venue

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h1>@Html.DisplayFor(model => model.Venue_Name) Details</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>

<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Venue Name:")
        </dt>

        <dd class="form-control" style="width:200px;  overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Venue_Name)
        </dd>

        <dt>
            @Html.Label("Venue Type:")
        </dt>

        <dd class="form-control" style="width:200px; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.VenueType.VenueType_Description)
        </dd>

        <dt>
            @Html.Label("Streen Number:")
        </dt>

        <dd class="form-control" style="width:200px;  overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.StreeNumber)
        </dd>

        <dt>
            @Html.Label("Street Name:")
        </dt>

        <dd class="form-control" style="width:200px;  overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.StreetName)
        </dd>

        <dt>
            @Html.Label("Suburb:")
        </dt>

        <dd class="form-control" style="width:200px;  overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Suburb)
        </dd>


        <dt>
            @Html.Label("City:")
        </dt>

        <dd class="form-control" style="width:200px;  overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.Label("Province:")
        </dt>

        <dd class="form-control" style="width:200px;  overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Province)
        </dd>
    </dl>
</div>




<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div data-toggle="tooltip" title="Update">
                <button type="button" class="btn" onclick="location.href='@Url.Action("Edit", "Venues", new { id = Model.VenueID })'"><i class="fa fa-pencil" aria-hidden="true"></i></button>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" data-toggle="tooltip" title="Delete">
            <button class="btn" data-toggle="modal" data-target="#Delete">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 " data-toggle="tooltip" title="Return to Content">
            <div>
                <button type="button" class="btn" onclick="location.href='@Url.Action("Index", "Venues")'"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="Delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Delete Venue</h4>
            </div>
            <div class="modal-body">
                Are you sure that you want to delete this venue?
            </div>
            <div class="modal-footer form-inline">
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color form-group">
                        <button data-toggle="tooltip" title="Confirm Delete" type="submit" value="Delete" class="btn btn-default btn-simple form-group">Delete</button>
                    </div>
                    <div class="form-group">
                    <button data-toggle="tooltip" title="Make ammendments" type="button" class="btn btn-default btn-simple form-group" data-dismiss="modal">Close</button>
                    </div>
                }
                
            </div>
        </div>
    </div>
</div>