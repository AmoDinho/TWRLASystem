@{
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}


<div class="jumbotron">
    <h2>Delete Venue</h2>

</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        <div class="form-group">
            <lable class="control-label col-md-2">Name</lable>
            <div class="col-md-10">
                <input type="text" value="ME" placeholder="Regular" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">  Capacity</lable>
            <div class="col-md-10">
                <input type="text" value="" placeholder="Regular" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Accessibility</lable>
            <div class="col-md-10">
                <input type="text" value="" placeholder="Regular" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Street Number </lable>
            <div class="col-md-10">
                <input type="text" value="" placeholder="Regular" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Suburb </lable>
            <div class="col-md-10">
                <input type="text" class="form-control " value="" />
            </div>
        </div>


        <div class="form-group">
            <lable class="control-label col-md-2">Province</lable>
            <div class="col-md-10">
                <input type="text" value="" placeholder="Regular" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Venue Type</lable>
            <div class="col-md-10">
                <input type="text" value="" placeholder="Regular" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-round" data-toggle="modal" data-target="#myModal1"style="color:#9b16d8" />
            </div>
        </div>
    </div>
}

<div class="form-inline" style="float:right">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Return" class="btn btn-default btn-round" data-toggle="modal" data-target="#myModal1" style="color:#9b16d8;" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cancel" class="btn btn-default btn-round" data-toggle="modal" data-target="#myModal1" style="color:#9b16d8;" />
        </div>
    </div>
</div>


<div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Are you sure?</h4>
            </div>
            <div class="modal-body">
                Once this venue is deleted, it will be deleted forever.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info btn-simple" data-dismiss="modal">Confirm</button>

            </div>
        </div>
    </div>
</div>