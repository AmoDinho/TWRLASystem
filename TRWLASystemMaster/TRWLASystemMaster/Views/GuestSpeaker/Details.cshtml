@model TRWLASystemMaster.Models.DB.GuestSpeaker

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h2>@Html.DisplayFor(model => model.GuestSpeaker_Name)'s Information</h2>
</div>

@if (TempData["notice"] != null)
{
    <h4>@TempData["notice"]</h4>
}

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name:
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.GuestSpeaker_Name)
        </dd>
        <dt>
            Surname:
        </dt>
        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.GuestSpeaker_Surname)
        </dd>
        <dt>
            Phone Number:
        </dt>
        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.GuestSpeaker_Phone)
        </dd>
        <dt>
            Email:
        </dt>
        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.GuestSpeaker_Email)
        </dd>
        <dt>
            Picture Link:
        </dt>
        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.GuestSpeaker_PictureLink)
        </dd>
    </dl>
    <div style="background-image:url((@Html.DisplayFor(model => model.GuestSpeaker_PictureLink))" />
</div>

<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="btn btn-default btn-round" style="color:#9b16d8">
                @Html.ActionLink("Update", "Edit", new { id = Model.GuestSpeakerID })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-default btn-round" data-toggle="modal" data-target="#Delete" style="color:#9b16d8">
                Delete Guest Speaker
            </button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 ">
            <div>
                @Html.ActionLink("Return", "Index", "GuestSpeakers1", new { @class = "btn btn-default btn-round", @style = "color:#9b16d8" })
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="Delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Delete @Html.DisplayFor(model => model.GuestSpeaker_Name)</h4>
            </div>
            <div class="modal-body">
                Are you sure that you want to delete @Html.DisplayFor(model => model.GuestSpeaker_Name)'s Information off of the system?
            </div>
            <div class="modal-footer form-inline">
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color ">
                        <button type="submit" value="Delete" class="btn btn-default btn-simple form-group">Delete Guest Speaker</button>
                    </div>


                }
                <button type="button" class="btn btn-default btn-simple form-group" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

