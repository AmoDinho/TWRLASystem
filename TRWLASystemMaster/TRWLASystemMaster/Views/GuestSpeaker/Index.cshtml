@model IEnumerable<TRWLASystemMaster.Models.DB.GuestSpeaker>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h1>Guest Speakers</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>

<script>
    function doNavigate() {
        window.location.href = document.getElementById("UrlList").value;
    };
</script>

<div class="row" @*id="showMe" style="display:none;*@>
    <div class="col-md-12">
        <div class="form-inline" style="margin-top:-150px;">
            <div class="form-group">
                <h2 style="z-index:100; position:relative; background-color:transparent;">Search Guest Speakers</h2>
                @using (Html.BeginForm())
                {
                    <div class="form-inline" style="margin-bottom:10px;">
                        <p data-toggle="tooltip" title="Search by Name" class="form-group">
                            @Html.TextBox("searchString", "", new { placeholder = "Name of Guest Speaker", @class = "form-control", style = "width:100%;" })
                        </p>

                        <p class="form-group">
                            <button data-toggle="tooltip" title="Search" type="submit" value="Search" class="btn"><i class="fa fa-search" aria-hidden="true" style="color:black;"></i></button>
                        </p>
                    </div>
                }
                <select data-toggle="tooltip" title="Filter Guest Speakers" id="UrlList" onchange="doNavigate()" class="form-control" style="margin-bottom:20px; width:280px;">
                    <option value="">Filter by...</option>
                    <option value="@Url.Action("Index", "GuestSpeaker", new { sortOrder = "descending" })'">Names Descending</option>
                    <option value="@Url.Action("Index", "GuestSpeaker", new { ascending = "ascending" })'">Names Ascending</option>
                </select>
            </div>
        </div>
    </div>
</div>




<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Surname
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Email Address
        </th>
        <th>
            Picture Link
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(p => p.GuestSpeakerID != 1))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GuestSpeaker_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestSpeaker_Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestSpeaker_Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestSpeaker_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestSpeaker_PictureLink)
            </td>
            <td>
                <a href="@Url.Action("Details", new { id=item.GuestSpeakerID })" data-toggle="tooltip" title="Details"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
            </td>
        </tr>
    }

</table>

<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" data-toggle="tooltip" title="Register Guest Speaker">
            <button  type="button" class="btn" onclick="location.href='@Url.Action("Create", "GuestSpeaker")'"><i class="fa fa-plus" aria-hidden="true"></i></button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 " data-toggle="tooltip" title="Return to Main Menu">
            <button  type="button" class="btn" onclick="location.href='@Url.Action("Index", "TRWLASchedules")'"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
        </div>
    </div>
</div>