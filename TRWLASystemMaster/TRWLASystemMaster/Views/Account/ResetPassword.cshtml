@*@model TRWLASystemMaster.Models.ResetPasswordViewModel*@
@{
    ViewBag.Title = "Reset password";
}
<div class="jumbotron" style="text-align:left; margin-bottom:100px;">
    <h1>@ViewBag.Title</h1>
    <div class="quotehome"></div>
    <div class="quote1home"></div>
    <div class="quote2home"></div>
</div>

<div class="row">

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Please enter a enter a new password</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group" style="margin-bottom:10px;">
            <label class="col-md-10">New Password</label>
            <div class="col-md-10">
                <input type="password" style="border: 1px solid #E3E3E3; color: #2c2c2c; width:280px;" />
            </div>
        </div>
        <div class="form-group" style="margin-bottom:10px;">
            <label class="col-md-10">Confirm New Password</label>
            <div class="col-md-10">
                <input type="password" style="border: 1px solid #E3E3E3; color: #2c2c2c; width:280px;" />
            </div>
        </div>

        <div class="form-group" style="margin-bottom:10px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Reset" />
            </div>
        </div>
    }



</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
