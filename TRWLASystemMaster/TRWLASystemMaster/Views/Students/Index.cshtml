@model IEnumerable<TRWLASystemMaster.Models.DB.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}



<div class="jumbotron" style="margin-bottom:150px">

    <h1>Students </h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>

<button style="margin-bottom:10px;" type="button" class="btn" onclick="location.href='@Url.Action("Index", "StudentTypes")'">View Student Types</button>

@using (Html.BeginForm())
{
    <div class="form-inline" style="margin-bottom:10px;">
        <p data-toggle="tooltip" title="Search by name" class="form-group">
            @Html.TextBox("searchString", "", new { placeholder = "Name of Student", @class = "form-control", style = "width:100%;" })
        </p>

        <p class="form-group">
            <button data-toggle="tooltip" title="Search" type="submit" value="Search" class="btn"><i class="fa fa-search" aria-hidden="true" style="color:black;"></i></button>
        </p>
    </div>
}

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            Student Number 
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Graduate)
        </th>*@
        <th>
            Degree
        </th>
        <th>
           Student Name @*@Html.DisplayNameFor(model => model.Student_Name)*@
        </th>
        <th>
          Student Surname  @*@Html.DisplayNameFor(model => model.Student_Surname)*@
        </th>
        <th>
          Phone Number  @*@Html.DisplayNameFor(model => model.Student_Phone)*@
        </th>
        <th>
         Date of Birth  @*@Html.DisplayNameFor(model => model.Student_DoB)*@
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.ActiveStatus)
        </th>*@
        <th>
            Residence  @*@Html.DisplayNameFor(model => model.Residence.Res_Name)*@
        </th>
        <th>
            Student Type   @*@Html.DisplayNameFor(model => model.StudentType.StudentTypeDescription)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentNumber)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Graduate)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Degree)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student_Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student_Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student_DoB)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.ActiveStatus)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Residence.Res_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentType.StudentTypeDescription)
        </td>
        <td>
            @*<a href="@Url.Action("Edit", new { id=item.StudentID })" data-toggle="tooltip" title="Edit"><i class="fa fa-pencil" aria-hidden="true"></i></a>*@ 
            <a href="@Url.Action("Details", new { id=item.StudentID })" data-toggle="tooltip" title="Details"><i class="fa fa-info-circle" aria-hidden="true"></i></a> 
            <a href="@Url.Action("Delete", new { id=item.StudentID })" data-toggle="tooltip" title="Delete"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
    </tr>
}

</table>

<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group">
        <button data-toggle="tooltip" title="Return to Main Menu" type="button" class="btn" onclick="location.href='@Url.Action("Index", "TRWLASchedules")'">Return</button>
    </div>
</div>
