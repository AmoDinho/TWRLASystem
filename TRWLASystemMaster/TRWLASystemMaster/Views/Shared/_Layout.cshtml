<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/lib")
        @Styles.Render("~/Content/Custom")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="marginwrapper">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("TRWLA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Service", "CommServe", "Home")</li>
                        <li>@Html.ActionLink("Relationships", "Network", "Home")</li>
                        <li>@Html.ActionLink("Skills", "Skills", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Gallery", "Gallery", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <div class="footer">
                <p>
                    &copy; @DateTime.Now.Year - TuksRes Women in Leadership Academy
                    <a href="https://www.facebook.com/TuksResWomenInLeadershipAcademy/" data-toggle="tooltip" title="Facebook" class="icon-button facebook"><i class="fa fa-facebook" aria-hidden="true"></i><span></span></a>
                    <a href="https://twitter.com/TRWLA1" data-toggle="tooltip" title="Twitter" class="icon-button twitter"><i class="fa fa-twitter" aria-hidden="true"></i><span></span></a>
                    <a href="https://www.instagram.com/trwla1/?hl=en" data-toggle="tooltip" title="Instagram" class="icon-button google-plus"><i class="fa fa-instagram" aria-hidden="true"></i><span></span></a>
                    <a href="https://tuksreswomeninleadershipacademy.wordpress.com/" data-toggle="tooltip" title="Blog" class="icon-button blog"><i class="fa fa-book" aria-hidden="true"></i><span></span></a>
                    @*<a href="https://tuksreswomeninleadershipacademy.wordpress.com/" data-toggle="tooltip" title="Donations" class="icon-button donation"><i class="fa fa-usd" aria-hidden="true"></i><span></span></a>*@
                </p>
            </div>
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

        @RenderSection("scripts", required: false)

        <script>
            $(document).ready(function () {
                $('[data-toggle="tooltip"]').tooltip();
            });
        </script>
</body>
</html>
<script src="https://use.fontawesome.com/dead28a296.js"></script>
