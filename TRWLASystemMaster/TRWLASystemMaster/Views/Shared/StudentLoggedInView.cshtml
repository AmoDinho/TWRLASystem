@{
    ViewBag.Title = "StudentLoggedInView";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title TRWLA Student Portal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TRWLA Management System", "StudentMainMenu", "TRWLASchedules", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @* ADD LINK TO EVENTS PAGE *@
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@

                    @* ADD LINK TO Volunteer List PAGE *@
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    <li role="presentation" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Home<b class="caret"></b></a>
                        <ul class="dropdown-menu"></ul>
                    </li>
                    <li role="presentation" class="dropdown">
                        <a href='@Url.Action("Index", "Volunteers")' class="dropdown-toggle" data-toggle="dropdown">Volunteer<b class="caret"></b></a>
                        <ul class="dropdown-menu"></ul>
                    </li>
                    <li role="presentation" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reading Content<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href='@Url.Action("StudentContent", "TRWLASchedules")'>Content</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Gallery", "Gallery", "Events")</li>
                </ul>
                @Html.Partial("Stud_LoginPartial")
            </div>
        </div>
    </div>
    @RenderBody()
    <div class="container body-content">
        
        @*
            <footer class="panel-footer">
                <p>&copy; @DateTime.Now.Year - TRWLA System Web Application</p>
            </footer>*@
    </div>
   
