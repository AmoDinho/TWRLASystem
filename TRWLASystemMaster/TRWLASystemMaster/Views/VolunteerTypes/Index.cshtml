@model IEnumerable<TRWLASystemMaster.Models.DB.VolunteerType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}




<div class="jumbotron">

    <h1> Volunteer Types</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>


@* Search Button for VolunteerType Description  '*@
<h2 style="z-index:100; position:relative; background-color:transparent;">Search Volunteer Types</h2>
@using (Html.BeginForm())
{
    <div class="form-inline" style="margin-bottom:10px;">
        <p data-toggle="tooltip" title="Search by name" class="form-group">
            @Html.TextBox("searchStringVS", "", new { placeholder = "Name of Volunteer Type", @class = "form-control", style = "width:100%;" })
        </p>

        <p class="form-group">
            <button data-toggle="tooltip" title="Search" type="submit" value="Search" class="btn"><i class="fa fa-search" aria-hidden="true" style="color:black;"></i></button>
        </p>
    </div>
}


<table class="table">
    <tr>
        <th>
            Volunteer Type     @*@Html.DisplayNameFor(model => model.VolunteerType_Description)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerType_Description)
            </td>
            <td>
                <a href="@Url.Action("Details", new { id=item.VolunteerTypeID })" data-toggle="tooltip" title="Details"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
            </td>
        </tr>
    }

</table>



<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div>
                <button type="button" class="btn" onclick="location.href='@Url.Action("Volunteers", "SYSUserProfiles")'"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>

            </div>
        </div>
    </div>
</div>


<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div>
                <button type="button" class="btn" onclick="location.href='@Url.Action("Create", "VolunteerTypes")'"><i class="fa fa-plus" aria-hidden="true"></i></button>

            </div>
        </div>
    </div>
</div>