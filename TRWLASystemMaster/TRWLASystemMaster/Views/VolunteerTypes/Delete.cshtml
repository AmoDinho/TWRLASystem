@model TRWLASystemMaster.Models.DB.VolunteerType

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h1>Delete a Volunteer Type</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>

<h3>Are you sure you want to delete this?</h3>

<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Description")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VolunteerType_Description)
        </dd>

    </dl>


</div>

<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:60px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">

            <div>
                <button type="button" class="btn" onclick="location.href='@Url.Action("Index", "StudentTypes")'">Return</button>

            </div>

        </div>
    </div>
</div>

<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:60px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div>
                <div>
                    @using (Html.BeginForm())
            {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-default" />

                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>