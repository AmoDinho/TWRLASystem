@model IEnumerable<TRWLASystemMaster.Models.Usertype.StudentType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<h2>Student Type</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@* Search Button for Stundent Type'*@
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchStringSt")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StudentTypeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.StudentTypeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StudentTypeID })
        </td>
    </tr>
}

</table>
