@model IEnumerable<TRWLASystemMaster.Models.DB.StudentType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h1>Student Type - Home</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>

@* Search Button for 'Stuent Type Description'*@
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchStringST", null, new { @style = "border-radius:4px; width:300px; color:black; border-color:white" })

        <button value="Search" class="btn btn-default "><i class="fa fa-search" aria-hidden="true"></i> search</button>
    </p>
}


<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.StudentTypeDescription)*@ Student Type
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentTypeDescription)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id=item.StudentTypeID })" data-toggle="tooltip" title="Edit"><i class="fa fa-pencil" aria-hidden="true"></i></a> |

                <a href="@Url.Action("Details", new { id=item.StudentTypeID})" data-toggle="tooltip" title="Details"><i class="fa fa-info-circle" aria-hidden="true"></i></a> |

                <a href="@Url.Action("Delete", new { id=item.StudentTypeID })" data-toggle="tooltip" title="Delete"><i class="fa fa-trash-o" aria-hidden="true"></i></a> |


            </td>
        </tr>
    }

</table>
<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div>
                <button type="button" class="btn" onclick="location.href='@Url.Action("Index", "Volunteers")'">Return</button>

            </div>
        </div>
    </div>
</div>


<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div>
                <button type="button" class="btn" onclick="location.href='@Url.Action("Create", "StudentTypes")'">Add a new Student Type</button>

            </div>
        </div>
    </div>
</div>

