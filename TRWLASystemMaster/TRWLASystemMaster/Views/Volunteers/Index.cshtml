@model IEnumerable<TRWLASystemMaster.Models.Volunteer>

@{
   
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<h2>Index</h2>

@* Search Button for 'Volunteer Name'*@
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("searchStringVols", null, new { @style = "border-radius:4px; width:300px; color:black; border-color:white" })

        <button value="Search" class="btn btn-default btn-round" style="color:#9b16d8"><i class="fa fa-search" aria-hidden="true"></i> search</button>
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Volunteer_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Volunteer_Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Volunteer_Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Volunteer_Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Volunteer_DoB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Volunteer_Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActiveStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserType.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VolunteerType.VolunteerType_Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Volunteer_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Volunteer_Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Volunteer_Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Volunteer_Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Volunteer_DoB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Volunteer_Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActiveStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserType.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VolunteerType.VolunteerType_Description)
        </td>
        <td>
          

            <a href="@Url.Action("Details", new { id=item.VolunteerID })" data-toggle="tooltip" title="Details"><i class="fa fa-info-circle" aria-hidden="true"></i></a> 

            

          
        </td>
    </tr>
}

</table>
