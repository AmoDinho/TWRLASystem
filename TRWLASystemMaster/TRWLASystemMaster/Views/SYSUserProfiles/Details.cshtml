@model TRWLASystemMaster.Models.DB.SYSUserProfile

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron" style="text-align:left; margin-bottom:100px;">
    <h1>@Html.DisplayFor(model => model.FirstName)'s @ViewBag.Title</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>



<div>


    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Student Number")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.StudentNumber)
        </dd>

        <dt>
            @Html.Label("Name")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.Label("Surname")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.Label("Email")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.Label("Date of Birth")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.DoB)
        </dd>

        <dt>
            @Html.Label("Phone number")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Phonenumber)
        </dd>



        <dt>
           @Html.Label("Degree")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Degree)
        </dd>

        <dt>
            @Html.Label("Year of Study")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.YearOfStudy)
        </dd>



        <dt>
            @Html.Label("Residence")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Residence.Res_Name)
        </dd>
    </dl>

</div>

<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 ">
            <button data-toggle="tooltip" title="Return to Contents" type="button" class="btn" onclick="location.href='@Url.Action("Index", "SYSUserProfiles")'"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
        </div>
    </div>
</div>