@model IEnumerable<TRWLASystemMaster.Models.DB.SYSUserProfile>

@{
    ViewBag.Title = "AddNewStudent";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h1>Add New Student</h1>

    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>

<div class="form-inline" style="margin-bottom:10px;">
    <div class="form-group">
        @using (Html.BeginForm())
        {
            <div class="form-inline" style="margin-bottom:30px;">
                <p data-toggle="tooltip" title="Search by name" class="form-group">
                    @Html.TextBox("searchString", "", new { placeholder = "Name of Student", @class = "form-control", style = "width:100%;" })
                </p>

                <p class="form-group">
                    <button data-toggle="tooltip" title="Search" type="submit" value="Search" class="btn"><i class="fa fa-search" aria-hidden="true" style="color:black;"></i></button>
                </p>
            </div>
        }
    </div>
</div>

<table class="table">
    <tr>
        <th>
            Student Number
        </th>
        <th>
            Degree
        </th>
        <th>
            Year of Study
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Residence
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(p => p.UserTypeID == 1))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfStudy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Residence.Res_Name)
            </td>
            <td>
                @Html.ActionLink("Add New Student", "StudentDetails", new { id = item.SYSUserProfileID })
            </td>
        </tr>

    }


</table>

<div class="form-group" style="margin-right:5px; float:right;">
    <button type="button" class="btn" onclick="location.href='@Url.Action("LogAttendance", "TRWLASchedules")'">Return</button>
</div>