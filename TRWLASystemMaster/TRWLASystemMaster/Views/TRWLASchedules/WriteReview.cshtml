@model TRWLASystemMaster.Models.DB.LectureReview

@{
    ViewBag.Title = "WriteReview";
    Layout = "~/Views/Shared/StudentLoggedInView.cshtml";
}

<div class="jumbotron">
    <h1>Write a review on @ViewBag.LectureName </h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="margin-bottom:10px;">
            @Html.Label("Review", new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="margin-bottom:10px;">
                @Html.TextAreaFor(model => model.Review, new { maxlength = 300, @class = "form-control", @style = "border: 1px solid #E3E3E3; color: #2c2c2c; width:280px; height:200px;" })
                @Html.ValidationMessageFor(model => model.Review, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Rating", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RatingID", null, htmlAttributes: new { @class = "form-control", @id = "RatingType" })
                @Html.ValidationMessageFor(model => model.RatingID, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
        <div class="form-group">
            <div style="margin-right:5px;">
                <div class="form-actions no-color form-group" data-toggle="tooltip" title="Submit Review">
                    <button type="submit" value="Create" class="btn"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-group" data-toggle="tooltip" title="Return to Main Menu">
                <button  type="button" class="btn" onclick="location.href='@Url.Action("StudentMainMenu")'"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
            </div>
        </div>
    </div>

}




