@model TRWLASystemMaster.Models.Lecture

@{
    ViewBag.Title = "WriteReview";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h2>Write a review on @Html.DisplayFor(model => model.Lecture_Name) </h2>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Name:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Lecture_Name)
        </dd>

        <dt>
            @Html.Label("Summary:")
        </dt>

        <dd class="form-control" style="width:200px; height:100px; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Lecture_Summary)
        </dd>

        <dt>
            @Html.Label("Description:")
        </dt>

        <dd class="form-control" style="width:200px; height:150px; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Lecture_Description)
        </dd>

        <dt>
            @Html.Label("Date:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Lecture_Date)
        </dd>

        <dt>
            @Html.Label("Time:")
        </dt>


        <dd class="form-group form-control " style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Lecture_StartTime)
        </dd>
        <dd style="margin-bottom:10px;">
            to
        </dd>

        <dd class="form-group form-control " style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Lecture_EndTime)
        </dd>


        <dt>
            @Html.Label("Theme:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Lecture_Theme)
        </dd>

        <dt>
            @Html.Label("Assigned Content:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Content.Content_Name)
        </dd>

        <dt>
            @Html.Label("Residence:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Residence.Res_Name)
        </dd>
    </dl>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">

    </div>
}

<div class="form-inline" style="float:right;">
    <div style="margin-right:5px;">
        <button type="button" class="btn" onclick="location.href='@Url.Action("Index", "TRWLASchedules")'">Return</button>
    </div>
</div>


