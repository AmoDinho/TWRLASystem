@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group" style="float:right;">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Log Attendance" class="btn btn-default" />
        </div>
        <div class="form-group" style="margin-right:5px;">
            <button type="button" class="btn" onclick="location.href='@Url.Action("AddNewStudent", "TRWLASchedules")'">Return</button>
        </div>
    </div>
}
