

@{
    ViewBag.Title = "ClassAttendance";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h2>Class Attendance</h2>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>

<div class="row">
    <div class="col-md-10">
        @if (TempData["NoEvent"] != null)
        {
            @TempData["NoEvent"];
        }
        @using (Html.BeginForm())
        {

            string func = ViewBag.Function.ToString("###");
            string lec = ViewBag.Lecture.ToString("###");
            string com = ViewBag.Com.ToString("###");
            string gen = ViewBag.Gen.ToString("###");

            <h2> TRWLA Event Attendance</h2>
            <div class="form-inline">
                @if (func == "")
                {
                    <div data-toggle="tooltip" title="Percentage of students who attend Functions" role="progressbar" class="form-group" style="border-radius:3px; margin-bottom: 10px; background-color:#4717f6; width:7%; height:30px; color:white;"><i style="margin-left:5px; margin-right:5px; color:white;" class="fa fa-microphone" aria-hidden="true"></i>0%</div>
                }
                @if (func != "")
                {
                    <div data-toggle="tooltip" title="Percentage of students who attend Functions" role="progressbar" class="form-group" style="border-radius:3px; margin-bottom: 10px; background-color:#4717f6; width:@func%; height:30px; color:white;"><i style="margin-left:5px; margin-right:5px; color:white;" class="fa fa-microphone" aria-hidden="true"></i>@func%</div>
                }
            </div>

            <div class="form-inline">
                @if (lec == "")
                {
                    <div data-toggle="tooltip" title="Percentage of students who attend Lectures" role="progressbar" class="form-group" style="border-radius:3px; margin-bottom: 10px; background-color:#ffdb58; width:7%; height:30px; color:white;"><i style="margin-left:5px; margin-right:5px; color:white;" class="fa fa-bookmark" aria-hidden="true"></i>0%</div>
                }
                @if (lec != "")
                {
                    <div data-toggle="tooltip" title="Percentage of students who attend Lectures" role="progressbar" class="form-group" style="border-radius:3px; margin-bottom: 10px; background-color:#ffdb58; width:@lec%; height:30px; color:white;"><i style="margin-left:5px; margin-right:5px; color:white;" class="fa fa-bookmark" aria-hidden="true"></i>@lec%</div>
                }
            </div>

            <div class="form-inline">
                @if (com == "")
                {
                    <div data-toggle="tooltip" title="Percentage of students who attend Community Engagements" role="progressbar" class="form-group" style="border-radius:3px; margin-bottom: 10px; background-color:#a239ca; width:7%; height:30px; color:white;"><i style="margin-left:5px; margin-right:5px; color:white;" class="fa fa-globe" aria-hidden="true"></i>0%</div>
                }
                @if (com != "")
                {
                    <div data-toggle="tooltip" title="Percentage of students who attend Community Engagements" role="progressbar" class="form-group" style="border-radius:3px; margin-bottom: 10px; background-color:#a239ca; width:@com%; height:30px; color:white;"><i style="margin-left:5px; margin-right:5px; color:white;" class="fa fa-globe" aria-hidden="true"></i>@com%</div>
                }
            </div>

            <div class="form-inline">
                @if (gen == "")
                {
                    <div data-toggle="tooltip" title="Percentage of students who attend General Events" role="progressbar" class="form-group" style="border-radius:3px; margin-bottom: 10px; background-color:#778899; width:7%; height:30px; color:white;"><i style="margin-left:5px; margin-right:5px; color:white;" class="fa fa-asterisk" aria-hidden="true"></i>0%</div>
                }
                @if (gen != "")
                {
                    <div data-toggle="tooltip" title="Percentage of students who attend General Events" role="progressbar" class="form-group" style="border-radius:3px; margin-bottom: 10px; background-color:#778899; width:@gen%; height:30px; color:white;"><i style="margin-left:5px; margin-right:5px; color:white;" class="fa fa-asterisk" aria-hidden="true"></i>@gen%</div>
                }
            </div>

            <hr />
            <p style="text-align:center;">Percentage of Students (%)</p>
            <div class="col-md-12 form-inline">
                <div class="form-group col-md-5" style="margin:30px;">
                    @if (func == "")
                {
                        <h2 style="color:#4717f6;">0%</h2>
                        <p>of students who RSVP to functions attend them</p>


                    }
                    @if (func != "")
                    {
                        <h2 style="color:#4717f6;">@func%</h2>
                        <p>of students who RSVP to functions attend them</p>
                    }
                </div>
                <div class="form-group col-md-5" style="margin:30px;">
                    @if (lec == "")
                {
                        <h2 style="color:#ffdb58;">0%</h2>
                        <p>of students who RSVP to Lectures attend them</p>


                    }
                    @if (lec != "")
                    {
                        <h2 style="color:#ffdb58;">@lec%</h2>
                        <p>of students who RSVP to Lectures attend them</p>
                    }
                </div>
                <div class="form-group col-md-5" style="margin:30px;">
                    @if (com == "")
                {
                        <h2 style="color:#a239ca;">0%</h2>
                        <p>of students who RSVP to Community Engagements attend them</p>


                    }
                    @if (com != "")
                    {
                        <h2 style="color:#a239ca;">@com%</h2>
                        <p>of students who RSVP to Community Engagements attend them</p>
                    }
                </div>
                <div class="form-group col-md-5" style="margin:30px;">
                    @if (gen == "")
                {
                        <h2 style="color:#778899;">0%</h2>
                        <p>of students who RSVP to General Events attend them</p>


                    }
                    @if (gen != "")
                    {
                        <h2 style="color:#778899">@gen%</h2>
                        <p>of students who RSVP to General Events attend them</p>
                    }
                </div>

            </div>
        }


    </div>

</div>

<div class="form-inline" style="float:right; margin-bottom:10px; margin-top:10px;">
    <div class="form-group">
        <button data-toggle="tooltip" title="Return to the Main Menu" type="button" class="btn" onclick="location.href='@Url.Action("MainReportPage", "TRWLASchedules")'"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
    </div>
</div>