@model IEnumerable<TRWLASystemMaster.Models.DB.RSVP_Event>

@{
    ViewBag.Title = "RSVPdMembers";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h1>RSVPs for @ViewBag.Name </h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>

<div class="form-inline" style="margin-bottom:10px;">
    <div class="form-group">
        @using (Html.BeginForm())
        {
            <div class="form-inline" style="margin-bottom:50px;">
                <p data-toggle="tooltip" title="Search by name" class="form-group">
                    @Html.TextBox("searchString", "", new { placeholder = "Name of student", @class = "form-control", style = "width:100%;" })
                </p>

                <p class="form-group">
                    <button data-toggle="tooltip" title="Search" type="submit" value="Search" class="btn"><i class="fa fa-search" aria-hidden="true" style="color:black;"></i></button>
                </p>
            </div>
        }
    </div>
</div>

@if (TempData["Attend"] != null)
{
    <h4>@TempData["Attend"]</h4>
}



<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Surname
        </th>
        <th>
            Student Number
        </th>
        <th>
            Email
        </th>
        <th>
            Degree
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(p=>p.Attended == null))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SYSUserProfile.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SYSUserProfile.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SYSUserProfile.StudentNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SYSUserProfile.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SYSUserProfile.Degree)
            </td>
            <td>
                <a href="@Url.Action("ConfirmAttendance", "TRWLASchedules", new { studid = item.SYSUserProfile.SYSUserProfileID, evid = item.rsvpID }, null)" data-toggle="tooltip" title="Add Student"><i class="fa fa-check" aria-hidden="true"></i></a>
            </td>
        </tr>
    }

</table>



<div class="form-inline" style="float:right;">
    <div class="form-group" style="margin-right:5px;">
        <button type="button" class="btn" onclick="location.href='@Url.Action("AddNewStudent", "TRWLASchedules")'"><i class="fa fa-plus" aria-hidden="true"></i></button>
    </div>
    <div class="form-group" style="margin-right:5px;">
        <button type="button" class="btn" onclick="location.href='@Url.Action("LogAttendance", "TRWLASchedules")'"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
    </div>
</div>
