
@model IEnumerable<TRWLASystemMaster.Models.DB.Content>

@{
    ViewBag.Title = "StudentContent";
    Layout = "~/Views/Shared/StudentLoggedInView.cshtml";
}

<div class="jumbotron" style="margin-bottom:150px;">
    <h1>TRWLA Content</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>



<div class="form-inline" style="margin-bottom:10px;">
    <div class="form-group">
        <h2>Search Content</h2>
        @using (Html.BeginForm())
        {
            <div class="form-inline" style="margin-bottom:10px;">
                <p data-toggle="tooltip" title="Search by name" class="form-group">
                    @Html.TextBox("searchString", "", new { placeholder = "Name of Content", @class = "form-control", style = "width:100%;" })
                </p>

                <p class="form-group">
                    <button data-toggle="tooltip" title="Search" type="submit" value="Search" class="btn"><i class="fa fa-search" aria-hidden="true" style="color:black;"></i></button>
                </p>
            </div>
        }
    </div>
</div>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(p => p.Content_Status == 0))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content_Name)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Content_Description)
            </td>
            <td>
                <a href="@Url.Action("StudentContentDetails", new { id=item.ContentID })" data-toggle="tooltip" title="Details"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
            </td>
        </tr>
    }

</table>

<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group" data-toggle="tooltip" title="Return to Main Menu">
        <button type="button" class="btn" onclick="location.href='@Url.Action("StudentMainMenu", "TRWLASchedules")'"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
    </div>
</div>
