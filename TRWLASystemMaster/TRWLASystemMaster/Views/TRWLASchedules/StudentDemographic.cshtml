@model IEnumerable<TRWLASystemMaster.Models.Demographic>

@{
    ViewBag.Title = "StudentDemographic";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron" style="margin-bottom:150px;">
    <h1>Student Demographic</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>

@using (Html.BeginForm("ExportToExcel4", "TRWLASchedules", FormMethod.Post))
{
    <div class="row" style="height:300px; overflow-y:auto;">
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Surname
                </th>
                <th>
                    Student Number
                </th>
                <th>
                    Date of Birth
                </th>
                <th>
                    Degree
                </th>
                <th>
                    Residence
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.OrderByDescending(p => p.Res))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DoB, new { type = "date" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Degree)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Res)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>

                    <td></td>

                </tr>
            }


        </table>
        </div>
        <div class="row">
            <div>
                <h2>Number of Students: @ViewBag.StudentCount</h2>
            </div>
        </div>

        <div class="form-inline" style="float:right; margin-bottom:20px;">
            <div class="form-group">
                <input data-toggle="tooltip" title="Export Report to Excel" type="submit" value="Export to Excel" class="btn" />
            </div>

            <div class="form-group">
                <div style="margin-right:5px; float:right;">
                    <button data-toggle="tooltip" title="Return to Report Main Menu" type="button" class="btn" onclick="location.href='@Url.Action("MainReportPage", "TRWLASchedules")'">Return</button>
                </div>
            </div>
        </div>
        }

