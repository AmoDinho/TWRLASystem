@model TRWLASystemMaster.Models.DB.SYSUserProfile

@{
    ViewBag.Title = "ConfirmAttendance";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron" style="margin-bottom:150px;">
    <h1>Confirm Attendance of @Html.DisplayFor(p => p.FirstName)</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Student Number:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.StudentNumber)
        </dd>

        <dt>
            @Html.Label("Name:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt >
            @Html.Label("Surname:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.Label("Residence:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Residence.Res_Name)
        </dd>

        <dt>
            @Html.Label("Degree:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Degree)
        </dd>

        <dt>
            @Html.Label("Year of Study:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.YearOfStudy)
        </dd>


        <dt>
            @Html.Label("Date of Birth:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.DoB)
        </dd>

    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-inline" style="float:right;">
        <div class="form-group">
            <input type="submit" value="Log Attendance" class="btn btn-default" />
        </div>
        <div class="form-group" style="margin-right:5px;">
            <button type="button" class="btn" onclick="location.href='@Url.Action("LogAttendance", "TRWLASchedules")'">Return</button>
        </div>
    </div>
}

