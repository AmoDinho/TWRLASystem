<div class="form-inline" style="float:right; margin-bottom:10px; margin-top:10px;">
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <div>
            @Html.ActionLink("Cancel", "Create", "VenueTypes", new { @class = "btn btn-default btn-round", @style = "color:#9b16d8" })
        </div>
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <div>
            @Html.ActionLink("Return", "Details", "VenueTypes", new { @class = "btn btn-default btn-round", @style = "color:#9b16d8" })
        </div>
    </div>
</div>
    </div>


<div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Are you Sure?</h4>
            </div>
            <div class="modal-body">
                Once this Residence is deleted it is unrecoverable.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info btn-simple" data-dismiss="modal">Confirm</button>

            </div>
        </div>
    </div>
</div>