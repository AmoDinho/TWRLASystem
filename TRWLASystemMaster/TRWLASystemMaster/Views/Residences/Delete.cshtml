@model TRWLASystemMaster.Models.DB.Residence

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}


<div class="jumbotron" style="text-align:left; margin-bottom:100px;">
    <h1>Delete a Residence</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>
<h3>Are you sure you want to delete this res?</h3>
<div>
    <div class="form-group">
        <label class="control-label col-md-2"> Res Name</label>  
        <div class="col-md-10">
            @Html.EditorFor(model => model.Res_Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Res_Name, "", new { @class = "text-danger" })
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-inline" style="float:right; margin-bottom:20px; margin-top:20px;">
            <div class="form-group">
                <div style="margin-right:20px;">
                    <button class="btn btn-default" data-toggle="modal" data-target="#Create">
                        Delete
                    </button>
                </div>
            </div>
            <div class="form-group">
                <button data-toggle="tooltip" title="Return to Residences" type="button" class="btn" onclick="location.href='@Url.Action("Index", "Residences")'">Return</button>
            </div>
        </div>




        <div class="modal fade" id="Create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Delete Residence</h4>
                    </div>
                    <div class="modal-body">
                        Are you sure that you want to delete this residence?
                    </div>
                    <div class="modal-footer form-inline">
                        <div class="form-actions no-color form-group">
                            <button type="submit" value="Create" class="btn">Delete</button>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    }

</div>


