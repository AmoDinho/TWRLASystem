@model TRWLASystemMaster.Models.Usertype.Residence

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h2>Delete a Residence</h2>
</div>


<div>
    <h4>Residence</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ResName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ResName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ResType1.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ResType1.Description)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-round" style = "color:#9b16d8"  data-toggle="modal" data-target="#myModal1"  /> 
            @*@Html.ActionLink("Back to List", "Index")*@
