@model TRWLASystemMaster.Models.DB.Residence

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron" style="text-align:left; margin-bottom:100px;">
    <h1>@Html.DisplayFor(model => model.Res_Name) Details</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>

@if (TempData["notice"] != null)
{
    <h2>@TempData["notice"]</h2>
}

<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Res Name:")
        </dt>

        <dd class="form-control" style="width:200px;  overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Res_Name)
        </dd>
        <dt>
            @Html.Label("Number of Students:")
        </dt>
        <dd class="form-control" style="width:200px;  overflow-y:auto; margin-bottom:10px;">
            @ViewBag.Res
        </dd>
    </dl>

</div>

<div style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-inline">
        <div class="form-group">
            <button data-toggle="tooltip" title="Edit Residence" type="button" class="btn" onclick="location.href='@Url.Action("Edit", "Residences", new { id = Model.ResID })'"><i class="fa fa-pencil" aria-hidden="true"></i></button>
        </div>
        <div class="form-group" data-toggle="tooltip" title="Delete Residence">
            <button  type="button" class="btn btn-default" data-toggle="modal" data-target="#Delete">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
        </div>
        <div class="form-group" data-toggle="tooltip" title="Return to Residences">
            <button  type="button" class="btn" onclick="location.href='@Url.Action("Index", "Residences")'"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
        </div>
    </div>
</div>

<div class="modal fade" id="Delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Delete Residence</h4>
            </div>
            <div class="modal-body">
                Are you sure that you want to delete this residence off of the system?
            </div>
            <div class="modal-footer">
                <div class="form-inline">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-actions no-color form-group">
                            <button type="submit" value="Delete" class="btn">Delete</button>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>