        <div class="form-group">
            @Html.Label("Content", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ContentID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ContentID, "", new { @class = "text-danger" })
                <div style="margin-left:20px;">
                    @Html.ActionLink("Upload Content", "Create", "Contents")
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Theme", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Lecture_Theme, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Lecture_Theme, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Residence", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ResidenceID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ResidenceID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Summary", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Lecture_Summary, new { maxlength = 100, @class = "form-control", @style = "border: 1px solid #E3E3E3; border-radius:30px; color: #2c2c2c; width:280px;" })
                @Html.ValidationMessageFor(model => model.Lecture_Summary, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Description", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Lecture_Description, new { maxlength = 300, @class = "form-control", @style = "border: 1px solid #E3E3E3; border-radius:30px; color: #2c2c2c; width:280px; height:200px;" })
                @Html.ValidationMessageFor(model => model.Lecture_Description, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
