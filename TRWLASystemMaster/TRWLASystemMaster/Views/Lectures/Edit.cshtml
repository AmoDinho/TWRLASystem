@model TRWLASystemMaster.Models.Lecture

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LectureID)


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="margin-bottom:10px;">
            @Html.Label("Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10 ">
                @Html.TextBoxFor(model => model.Lecture_Name, new { maxlength = 30, @class = "form-control form-control-danger" })
                @Html.ValidationMessageFor(model => model.Lecture_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.Label("Time", new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Lecture_StartTime, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                @Html.ValidationMessageFor(model => model.Lecture_StartTime, "", new { @class = "text-danger" })
            </div>


            @Html.Label("-", new { @class = "control-label col-md-2", @style = "margin-left: -80px; margin-right: -10px;" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Lecture_EndTime, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                @Html.ValidationMessageFor(model => model.Lecture_EndTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Date", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Lecture_Date, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.Lecture_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
                @Html.Label("Venue", new { @class = "control-label col-md-2" })
