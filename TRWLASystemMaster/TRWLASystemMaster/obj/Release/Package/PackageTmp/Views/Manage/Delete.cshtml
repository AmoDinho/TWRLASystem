@model TRWLASystemMaster.Models.DB.SYSUserProfile

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="jumbotron">
    <h1>Deactivate Account</h1>
    <div class="quotedanger"></div>
    <div class="quote1danger"></div>
    <div class="quote2danger"></div>
</div>

<div>
    <h2><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Are you sure about this?</h2>
    <p>
        If you deactivate your account all your data will be lost and you cannot get it back again!
    </p>

    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()

        <div class="form-inline" style="float:right; margin-bottom:20px; margin-top:60px;">
            <div class="form-group">
                <input type="submit" value="Deactivate Anyway" class="btn" data-toggle="modal" data-target="#Create" />
            </div>
            </div>

            <div class="modal fade" id="Create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Deactivate Account</h4>
                        </div>
                        <div class="modal-body">
                            Are you sure that you want to deactivate your account ?
                        </div>
                        <div class="modal-footer form-inline">
                            <div class="form-actions no-color form-group ">
                                <button type="submit" value="Delete" class="btn">Confirm</button>
                            </div>
                            <div class="form-group">
                                <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>

