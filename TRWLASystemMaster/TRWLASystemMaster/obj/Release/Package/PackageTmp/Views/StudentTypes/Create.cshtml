@model TRWLASystemMaster.Models.DB.StudentType

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}


<div class="jumbotron">
    <h1>Create a New Student Type</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2"> Description</label>   @*@Html.LabelFor(model => model.StudentTypeDescription, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.StudentTypeDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StudentTypeDescription, "", new { @class = "text-danger" })
            </div>
        </div>





        <div class="form-inline" style="float:right; margin-bottom:20px; margin-top:60px;">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div>
                        <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index", "StudentTypes")'"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <div class="modal fade" id="Create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Create Student Type</h4>
                </div>
                <div class="modal-body">
                    Are you sure that you want to create this student type?
                </div>
                <div class="modal-footer form-inline" data-toggle="tooltip" title="Create Student Type">
                    <div class="form-actions no-color form-group">
                        <button type="submit" value="Create" class="btn">Confirm</button>
                    </div>
                    <div class="form-group" data-toggle="tooltip" title="Make Changes">
                        <button type="button" class="btn" data-dismiss="modal">Edit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:60px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div data-toggle="tooltip" title="Save Student Type">
                <button class="btn btn-default" data-toggle="modal" data-target="#Create">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}