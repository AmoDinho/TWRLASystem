@model IEnumerable<TRWLASystemMaster.Models.Demographic>

@{
    ViewBag.Title = "StudentDemographic";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h2>Student Demographic</h2>
</div>

@using (Html.BeginForm("ExportToExcel4", "TRWLASchedules", FormMethod.Post))
{
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Surname
        </th>
        <th>
            Student Number
        </th>
        <th>
            Date of Birth
        </th>
        <th>
            Degree
        </th>
        <th>
            Graduate Status
        </th>
        <th>
            Residence
        </th>
        <th>
            Student Type
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoB, new { type = "date" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grad) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Res)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudType)
            </td>

            <td></td>

        </tr>
    }
     
</table>
<tr>
    <td colspan="4">
        <br />
        <br />
        <input type="submit" value="Export to Excel" class="btn" style="float:right;" />
    </td>
</tr>
}

<div class="form-group">
    <div style="margin-right:5px; float:right;">
        <button type="button" class="btn" onclick="location.href='@Url.Action("Index", "TRWLASchedules")'">Return</button>
    </div>
</div>