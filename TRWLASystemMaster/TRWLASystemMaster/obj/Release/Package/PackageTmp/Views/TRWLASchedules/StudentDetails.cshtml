@model TRWLASystemMaster.Models.DB.SYSUserProfile

@{
    ViewBag.Title = "StudentDetails";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h1>Details of @Html.DisplayFor(model => model.FirstName)</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>

<div>
    <dl class="dl-horizontal" style="margin-top:-150px;">
        <dt>
            @Html.Label("Student Number:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.StudentNumber)
        </dd>

        <dt>
            @Html.Label("Degree:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Degree)
        </dd>

        <dt>
            @Html.Label("Year of Study:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.YearOfStudy)
        </dd>

        <dt>
            @Html.Label("Name:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.Label("Surname:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.LastName)
        </dd>


        <dt>
            @Html.Label("Date of Birth:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.DoB)
        </dd>

        <dt>
            @Html.Label("Residence:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; overflow-y:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Residence.Res_Name)
        </dd>

    </dl>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-inline" style="float:right;">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 " data-toggle="tooltip" title="Add new Student">
                <button class="btn">
                    <i class="fa fa-check" aria-hidden="true"></i>
                </button>
            </div>
        </div>
        <div class="form-group" data-toggle="tooltip" title="Return to Students">
            <button type="button" class="btn" onclick="location.href='@Url.Action("AddNewStudent", "TRWLASchedules")'"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
        </div>
    </div>
}