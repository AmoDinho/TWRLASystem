@model IEnumerable<TRWLASystemMaster.Models.Content>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h2>TRWLA Content</h2>
</div>



<div class="form-inline" style="margin-bottom:10px;">
    <div class="form-group">
        @using (Html.BeginForm())
        {
            <p>
                @Html.Label("Find by name:") @Html.TextBox("searchString")
                <input type="submit" value="Search" class="btn btn-default btn-round" , style="color:#9b16d8" />
            </p>
        }
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 ">
            <div class="btn btn-default btn-round" , style="color:#9b16d8">
                @Html.ActionLink("Order by Name", "Index", new { sortOrder = ViewBag.NameSortParm })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 ">
            <div class="btn btn-default btn-round" , style="color:#9b16d8">
                @Html.ActionLink("Show Locked", "Index", new { locked = ViewBag.SurnameSortParm })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 ">
            <div class="btn btn-default btn-round" , style="color:#9b16d8">
                @Html.ActionLink("Show Unlocked", "Index", new { unlocked = ViewBag.SurnameSortParm })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 ">
            <div class="btn btn-default btn-round" , style="color:#9b16d8">
                @Html.ActionLink("Show All", "Index", new { all = ViewBag.SurnameSortParm })
            </div>
        </div>
    </div>


</div>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Content Link
        </th>
        <th>
            Status
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content_Link)
            </td>
            <td>
                @if (item.Content_Status == 1)
                {
                    <p>Locked</p>
                }
                @if (item.Content_Status == 0)
                {
                    <p>Unlocked</p>
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content_Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ContentID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ContentID })
            </td>
        </tr>
    }

</table>

<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div>
                @Html.ActionLink("Upload Content", "Create", "Contents1", new { @class = "btn btn-default btn-round", @style = "color:#9b16d8" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 ">
            <div class="btn btn-default btn-round" , style="color:#9b16d8">
                @Html.ActionLink("Return", "Index", "TRWLASchedules")
            </div>
        </div>
    </div>
</div>