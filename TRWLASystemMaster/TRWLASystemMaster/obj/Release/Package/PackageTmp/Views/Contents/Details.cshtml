@model TRWLASystemMaster.Models.Content

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h2>@Html.DisplayFor(model => model.Content_Name) Information</h2>
</div>

@if (TempData["notice"] != null)
{
    <h4>@TempData["notice"]</h4>
}

<div>
    <h4>Content</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Name:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Content_Name)
        </dd>
        <dt>
            @Html.Label("Content Link:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Content_Link)
        </dd>
        <dt>
            @Html.Label("Status:")
        </dt>

        <dd class="form-control" style="width:200px; height:32px; margin-bottom:10px;">
            @if (Model.Content_Status == 1)
            {
                <p>Locked</p>
            }
            @if (Model.Content_Status == 0)
            {
                <p>Unlocked</p>
            }

        </dd>
        <dt>
            @Html.Label("Description:")
        </dt>

        <dd class="form-control" style="width:200px; height:auto; margin-bottom:10px;">
            @Html.DisplayFor(model => model.Content_Description)
        </dd>
    </dl>
</div>
<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="btn btn-default btn-round" style="color:#9b16d8">
                @Html.ActionLink("Update", "Edit", new { id = Model.ContentID })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-default btn-round" data-toggle="modal" data-target="#Delete" style="color:#9b16d8">
                Delete Content
            </button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 ">
            <div>
                @Html.ActionLink("Return", "Index", "Contents1", new { @class = "btn btn-default btn-round", @style = "color:#9b16d8" })
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="Delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Delete @Html.DisplayFor(model => model.Content_Name)</h4>
            </div>
            <div class="modal-body">
                Are you sure that you want to delete @Html.DisplayFor(model => model.Content_Name)'s Information off of the system?
            </div>
            <div class="modal-footer form-inline">
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color ">
                        <button type="submit" value="Delete" class="btn btn-default btn-simple form-group">Delete Content</button>
                    </div>
                }
                <button type="button" class="btn btn-default btn-simple form-group" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>