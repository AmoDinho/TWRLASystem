@model IEnumerable<TRWLASystemMaster.Models.DB.VenueType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/VolunteerLoggedInPage.cshtml";
}

<div class="jumbotron">
    <h1>Venue Type</h1>
    <div class="quoteform"></div>
    <div class="quote1form"></div>
    <div class="quote2form"></div>
</div>


@* Search Button for 'Venue Type Description'*@
@using (Html.BeginForm())
{
    <div class="form-inline" style="margin-bottom:10px;">
        <p data-toggle="tooltip" title="Search by Name" class="form-group">
            @Html.TextBox("searchStringVT", "", new { placeholder = "Venue Type", @class = "form-control", style = "width:100%;" })
        </p>

        <p class="form-group">
            <button data-toggle="tooltip" title="Search" type="submit" value="Search" class="btn"><i class="fa fa-search" aria-hidden="true" style="color:black;"></i></button>
        </p>
    </div>
}


<table class="table">
    <tr>
        <th>
            Description     @*@Html.DisplayNameFor(model => model.VenueType_Description)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(p => p.VenueTypeID != 1))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VenueType_Description)
            </td>
            <td>
                <a href="@Url.Action("Details", "VenueTypes", new { id=item.VenueTypeID })" data-toggle="tooltip" title="Details"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
            </td>
        </tr>
    }

</table>

<div class="form-inline" style="float:right; margin-bottom:20px; margin-top:10px;">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div data-toggle="tooltip" title="Create Venue Type">
                <button type="button" class="btn" onclick="location.href='@Url.Action("Create", "VenueTypes")'"><i class="fa fa-plus" aria-hidden="true"></i></button>

            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 " data-toggle="tooltip" title="Return to Venues">
            <button  type="button" class="btn" onclick="location.href='@Url.Action("Index", "Venues")'"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
        </div>
    </div>
</div>